FROM amazoncorretto:17.0.13-alpine3.20

COPY *.jar app.jar

EXPOSE 8080
ENV JVM_OPTIONS="-Xms128m -Xmx384m"

ENTRYPOINT ["sh", "-c", "java \
  ${JVM_OPTIONS} \
  -jar app.jar \
  --spring.profiles.active=${PROFILE} \
  -DJWT_SECRET=${JWT_SECRET} \
  -DUSER_URL=${USER_URL} \
  -DARTICLE_URL=${ARTICLE_URL}"]
